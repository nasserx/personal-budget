QWidget {
    font-family: "Segoe UI", "Cairo", sans-serif;
    font-size: 13px;
    color: #212121;
    background-color: #FAFAFA;
}
QPushButton {
    border-radius: 6px;
    font-weight: 600;
}
QLineEdit {
    border-radius: 6px;
    padding: 6px;
}
QGroupBox {
    border: 1px solid #E0E0E0;
    border-radius: 8px;
    margin-top: 8px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 4px;
    font-weight: bold;
}
